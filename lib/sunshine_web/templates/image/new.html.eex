<h2>Upload a new image</h2>
<%= form_for @changeset, image_path(@conn, :create), 
             [multipart: true], fn f -> %>
  <div class="form-group">
    <label>
      Name: <%= text_input f, :name %>
    </label>
    <br/>
    <br/>
    <label>Image:<br/>
      <%= file_input f, :image %>
      <%= error_tag f, :image %>
    </label>
  </div>
  <div class=”form-group”>
    <%= submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
